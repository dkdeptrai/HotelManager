                                                </Style>
                                            </DataGrid.Resources>
                                            
                                        </DataGrid>-->
                                    </Grid>
                                </Border>
                            </Border>
                        </Grid>
                    </Grid>

                    <Grid Grid.Column="3" Background="#f7f3e3">
                        <Grid.RowDefinitions>
                            <RowDefinition></RowDefinition>
                            <RowDefinition Height="200"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1">
                            <Button
                                Style="{StaticResource MaterialDesignFlatSecondaryMidBgButton}"
                                ToolTip="MaterialDesignFlatAccentBackgroundButton"
                                IsEnabled="{Binding DataContext.ControlsEnabled, RelativeSource={RelativeSource FindAncestor, AncestorType=Window}}"
                                Content="Report a problem" 
                                    FontSize="15" 
                                     BorderThickness="0"
                                    Background="#ef476f" 
                                    Foreground="#FFE3E8E9"
                                    FontFamily="Times New Roman"
                                    RenderTransformOrigin="0.5,0.5" Margin="-19,91,-39,71"
                                    materialDesign:ButtonAssist.CornerRadius="3.5">
                                <Button.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="-90.070"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Button.RenderTransform>
                            </Button>
                        </Grid>

                    </Grid>

                </Grid>

            </Grid>
        </Border>

    </Border>
</Window>
